<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem Vindo ao Dose Certa!"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seu Assistente de Medicamentos Pessoal."
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_criar_conta"
        android:layout_width="380dp"
        android:layout_height="66dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4CAF50"
        android:text="Criar Conta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="380dp"
        android:layout_height="62dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#4CAF50"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_criar_conta" />

    <Button
        android:id="@+id/btn_adicionar_medicamento"
        android:layout_width="380dp"
        android:layout_height="62dp"
        android:backgroundTint="#4CAF50"
        android:text="Adicionar Medicamento"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:visibility="gone" /> <!-- Inicialmente invisível -->

    <Button
        android:id="@+id/btn_pressao_glicemia"
        android:layout_width="380dp"
        android:layout_height="62dp"
        android:backgroundTint="#4CAF50"
        android:text="Pressão e Glicemia"
        app:layout_constraintTop_toBottomOf="@id/btn_adicionar_medicamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:visibility="gone" /> <!-- Inicialmente invisível -->

    <Button
        android:id="@+id/btn_lista_medicamentos"
        android:layout_width="380dp"
        android:layout_height="62dp"
        android:backgroundTint="#4CAF50"
        android:text="Lista de Medicamentos"
        app:layout_constraintTop_toBottomOf="@id/btn_pressao_glicemia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:visibility="gone" /> <!-- Inicialmente invisível -->

</androidx.constraintlayout.widget.ConstraintLayout>
